# Claude Auto-Confirm Configuration
# Copy this to .env and modify as needed

# Auto-confirmation behavior (true/false)
AUTO_CONFIRM_ENABLED=true

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Configuration file path (optional, defaults to ~/.claude-auto-confirm.json)
CONFIG_FILE_PATH=

# Maximum confirmation requests per minute (rate limiting)
MAX_CONFIRMATIONS_PER_MINUTE=60

# Default response timeout in milliseconds
CONFIRMATION_TIMEOUT_MS=1000

# Patterns to always confirm (comma-separated regex patterns)
ALWAYS_CONFIRM_PATTERNS="file operations,code changes,build operations"

# Patterns to never confirm (comma-separated regex patterns)
NEVER_CONFIRM_PATTERNS="delete system files,format drive"

# Enable metrics collection (true/false)
METRICS_ENABLED=true