{
  "name": "claude-auto-confirm",
  "version": "1.0.0",
  "description": "Auto-confirmation subagent and slash command for Claude Code",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix && prettier --write src/**/*.{ts,json}",
    "format": "prettier --write src/**/*.{ts,json}",
    "clean": "rm -rf dist"
  },
  "keywords": ["claude-code", "auto-confirm", "subagent", "cli"],
  "author": "Claude Code User",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.1.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@types/inquirer": "^9.0.6",
    "@types/fs-extra": "^11.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "esbuild": "^0.19.4",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}